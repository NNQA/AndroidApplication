<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
    </style>
    <style name="whiteH2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="whiteTitleSearch" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="roundedimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>

    </style>
    <style name="roundediconPlayList" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>

    </style>
    <style name="Theme.SpotifyClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SpotifyClone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SpotifyClone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>