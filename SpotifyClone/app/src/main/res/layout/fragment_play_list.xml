<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayList"
    android:background="@color/bg1">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/grText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/namePlayList"
                style="@style/whiteH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibe/Type EmotionLess" />

            <TextView
                android:id="@+id/nameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NgoNguyenQuocAnh"
                android:textColor="@color/white" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iconPlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/play"
                    app:shapeAppearanceOverlay="@style/roundediconPlayList"
                    android:background="@color/white"
                    android:layout_toLeftOf="@+id/iconShuffle"
                    android:layout_marginRight="12dp"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iconShuffle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shuffle"
                    app:shapeAppearanceOverlay="@style/roundediconPlayList"
                    android:background="@color/white"
                    android:layout_alignParentEnd="true"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iconUser"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/personaladd"
                    app:shapeAppearanceOverlay="@style/roundediconPlayList"
                    android:background="@color/white"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrowdown"
                    app:shapeAppearanceOverlay="@style/roundediconPlayList"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/iconUser"
                    android:layout_marginLeft="12dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewtimkiem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="213dp"
            android:background="@color/white"
            android:visibility="visible"/>
    </RelativeLayout>

</FrameLayout>