<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp">




    <ImageView
        android:id="@+id/imgSong_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@drawable/darkside"/>

    <FrameLayout
        android:id="@+id/colorTheme_fg"
        android:background="@drawable/gradient2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >


        <TextView
            android:id="@+id/tvTitleSong"
            android:text="Darkside"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSingerSong"
            android:text="Alan Walker"
            android:textColor="#666666"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/btnPrevious_fg"
                android:src="@drawable/button_previous"
                app:tint="@color/black"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/btnPlay_fg"
                android:src="@drawable/button_play"
                app:tint="@color/black"
                android:layout_marginHorizontal="12dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/btnNext_fg"
                android:src="@drawable/button_next"
                app:tint="@color/black"
                android:layout_marginRight="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/btnClear"
                android:src="@drawable/button_off"
                app:tint="@color/black"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
